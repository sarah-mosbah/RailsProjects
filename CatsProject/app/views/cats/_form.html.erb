<% action_name =  cat.persisted? ? cat_url(cat) : cats_url  %>
<% method_type =  cat.persisted? ? "PUT" : "POST"  %>

<form action="<%=action_name%>" method="post">
 
 <input type="hidden" name="_method" value="<%=method_type%>"/>

   <label for="name">Name </label>
   <input type="text" value="<%=cat.name%>" name="cat[name]"/> 
<br/>
  <label for="birth_date">BirthDate </label>
   <input type="date" value="<%=cat.birth_date%>"  name="cat[birth_date]"/> 

<br/>

<label for="cat_color">Color</label>
<select name="cat[color]" >
 <option disabled selected>-- select a color --</option>
<%Cat::COLORS.each do |color|%>
    <option  <%= cat.color == color ? "selected" : ""%>
    value="<%=color%>">
    <%= color.upcase %>
    </option>
<% end %>
</select>
<br/>
  <input
    type="radio"
    name="cat[sex]"
    value="M"
    id="cat_sex_male"
    <%= cat.sex == "M" ? "checked" : "" %>/>
  <label for="cat_sex_male">Male</label>
<input
    type="radio"
    name="cat[sex]"
    value="F"
    id="cat_sex_female"
    <%= cat.sex == "F" ? "checked" : "" %>/>
  <label for="cat_sex_male">Female</label>
<br/>

  <label>
    Description
   
  </label>
  <br/>
   <textarea name="cat[description]"><%= cat.description %></textarea>
  <br/>
   <% submit_text = (cat.persisted? ? 'Update' : 'Create') + ' cat!' %>
  <input type="submit" value="<%= submit_text %>"/>
</form>